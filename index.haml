\---
layout: base
\---

/ Latest post section
%h2.section-heading<= "Latest Post"

{% for post in site.posts limit:1 %}
%h1.post-title<
  %a{href: "{{ post.url }}"} {{ post.title }}

%p.post-meta {{ post.date | date: "%b %-d, %Y" }}

%article.excerpt {{ post.excerpt }}

%p.more<
  %a{href: "{{ post.url }}"}= "Read more"
{% endfor %}

%hr

/ All Posts sections
%h2.section-heading<= "All Posts"

%ul.post-list

  {% for post in site.posts offset: 1 %}
  %li

    .post-meta<
      {{ post.date | date: "%b %-d, %Y"}}

    %a{href: "{{ post.url }}" }<
      {{ post.title }}

  {% endfor %}
