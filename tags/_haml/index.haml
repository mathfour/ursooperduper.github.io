\---
layout: base
\---

%h2.section-heading<= "Posts by Tag"

{% include tags.html %}

%hr

{% for t in sortedTags | sort %}
{% assign tag = t | first %}
{% assign posts = t | last %}

%a{name: "{{ tag | downcase | replace:' ','-'}}"}

%h2.section-heading {{ tag }}

.tag-list
  %ul
    {% for post in posts %}
    %li
      %a{href: "{{ post.url }}"}
        {{ post.title }}

      %span.post-meta<
        {{ post.date | date: "%b %-d, %Y" }}
    {% endfor %}
{% endfor %}
