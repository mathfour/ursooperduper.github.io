%html
  %head
    %meta{charset: "utf-8"}
    %meta{name: "viewport", content: "width=device-width"}

    %title
      {% if page.title %}{{ page.title }}{% else %}{{ site.title }}{% endif %}

    %meta{name: "description", content: "{{ site.description }} "}

    %link{rel: "stylesheet", href: "/css/main.css" }

    %link{rel: "stylesheet", href: "//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" }

    %script{src: "//use.typekit.net/ann6kvn.js"}
    %script
      try{Typekit.load();}catch(e){}

  %body

    %div.site-wrapper

      %header.site-header
        %div.wrapper
          %a.site-title{ href: "{{ site.baseurl }}" }
            {{ site.title }}

          %nav.site-nav
            %a.menu-icon
              %span.fa.fa-navicon
            %div.trigger
              %a.page-link{href: "/"}
                Home
              {% for page in site.pages %}
              {% if page.title %}
              %a.page-link{href: "{{ page.url }}"}
                {{ page.title }}
              {% endif %}
              {% endfor %}

      %div.page-content
        %div.wrapper
          {{ content }}

    %footer.site-footer
      %div.wrapper

        %div.footer-col-wrapper

          %div.footer-col.footer-col-1
            %h3.byline {{ site.title }}
            %ul.contact-list
              {% if site.github_username %}
              %li
                %a{href: "https://github.com/{{ site.github_username }}"}
                  %span.fa.fa-github
              {% endif %}

              {% if site.twitter_username %}
              %li
                %a{href: "https://twitter.com/{{ site.twitter_username }}"}
                  %span.fa.fa-twitter
              {% endif %}

              {% if site.instagram_username %}
              %li
                %a{href: "https://instagram.com/{{ site.instagram_username }}"}
                  %span.fa.fa-instagram
              {% endif %}

              {% if site.dribbble_username %}
              %li
                %a{href: "https://dribbble.com/{{ site.dribbble_username }}"}
                  %span.fa.fa-dribbble
              {% endif %}

              {% if site.linkedin_username %}
              %li
                %a{href: "https://linkedin.com/in/{{ site.linkedin_username }}"}
                  %span.fa.fa-linkedin
              {% endif %}


          %div.footer-col.footer-col-2
            %p {{ site.description }}
            %p.byline
